%% Résolution du problèmes du sac à dos relaché
%% Paramètres :
% u : utilité de chaque objet
% v : volume de chaque objet
% V : Volume totale du KP

function [x,z] = Greedy_kp(u,v,V)

%% Initialisation
W = 0;
n = size(u,2);
x = zeros(n,1);

%% Tri des ratio
c = u./v;
[~,ind] = sort(c,2,'descend');
ue = u(ind);
ve = v(ind);


%% Calcul de la sol
for i=1:n
    j = ind(i);
    W = ve(i) + W;
    
    if (W <= V)
        x(j) = 1;
    else
        W = W - ve(i);
    end
end
z = u*x;